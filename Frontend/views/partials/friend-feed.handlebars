<div class="post-card">
    <div class="post-img-container">
        <div class="post-img-left">
            <img src="" />
        </div>
        <div class="card-gutter-vert"></div>
        <div class="post-img-right">
            <div class="post-img-top">
                <img src="" />
            </div>
            <div class="card-gutter-horz"></div>
            <div class="post-img-bot">
                <img src="" />
                <div class="card-gutter-vert"></div>
                <img src="" />
            </div>
        </div>
    </div>
    <div class="post-text">
        <h4>Post Title</h4>
        <div class="blue-location">
